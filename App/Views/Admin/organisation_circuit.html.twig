<h3>{% trans %}Organisation d'un circuit{% endtrans %}</h3>

<form>
  <div class="form-group">
    <label for="date_depart">{% trans %}Date de départ officielle du circuit{% endtrans %} :</label>
    <input class="datepicker" id="date_depart" width="256px"/>
    <label for="date_fin">{% trans %}Date de fin officielle du circuit{% endtrans %} :</label>
    <input class="datepicker" id="date_fin" width="256px"/>
  </div>
  <div class="form-group">
    <label for="prix_circuit">{% trans %}Prix du circuit{% endtrans %} :</label>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text">$</span>
      </div>
      <input type="text" class="form-control" id="prix_circuit"
             aria-label="Amount (to the nearest dollar)">
      <div class="input-group-append">
        <span class="input-group-text">.00</span>
      </div>
    </div>
    <label for="date_remboursement">{% trans %}Date limite pour l'annulation avec
      remboursement{% endtrans %} : </label>
    <input class="datepicker" id="date_remboursement" width="256px"/>
    <label for="date_cancellation">{% trans %}Date limite pour l'annulation avec frais
      d'annulation{% endtrans %} :</label>
    <input class="datepicker" id="date_cancellation" width="256px"/>
    <label for="prix_annulation">{% trans %}Frais d'annulation{% endtrans %} :</label>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text">$</span>
      </div>
      <input type="text" class="form-control" id="prix_annulation"
             aria-label="Amount (to the nearest dollar)">
      <div class="input-group-append">
        <span class="input-group-text">.00</span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="nb_places">{% trans %}Nombre de places disponibles pour le circuit{% endtrans %}
      :</label>
    <input type="number" id="nb_places" width="256px"/>
    <label for="quorum">{% trans %}Nombre de places minimal pour l'organisation du circuit{% endtrans %}
      :</label>
    <input type="number" id="quorum" width="256px"/>
    {# // multiple selectpicker for circuit guides #}
    <div>
      <label for="guide">Guide(s) : </label>
      <select id="guide" class="selectpicker" title="Aucun guide" multiple>
        <option>Georges Baboune</option>
        <option>Harrison Légende</option>
        <option>Cookie Nancy</option>
      </select>
    </div>


  </div>
  <div class="form-group">
    <h4>{% trans %}Plan de paiement{% endtrans %}</h4>
    <label for="paiement_plan">{% trans %}Nom du plan de paiement{% endtrans %} :</label>
    <input type="text" class="form-control" id="paiement_plan"
           placeholder="Ex.: Plan Mensuel 1">
    <label for="prix_plan">{% trans %}Montant dû{% endtrans %} :</label>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text">$</span>
      </div>
      <input type="text" class="form-control" id="prix_plan"
             aria-label="Amount (to the nearest dollar)">
      <div class="input-group-append">
        <span class="input-group-text">.00</span>
      </div>
    </div>
    <label for="date_paiement">{% trans %}Date de paiement limite{% endtrans %} :</label>
    <input class="datepicker" id="date_paiement" width="256px"/>
  </div>
  <div class="button_panel">
    <button type="button" class="btn btn-dark mr-auto" onClick="getCircuits()">
      {% trans %}Retour à la liste des circuits{% endtrans %}
    </button>
    <button type="button" class="btn btn-secondary">{% trans %}Retour à la création du
      circuit{% endtrans %}
    </button>
    <button type="button" class="btn btn-success">{% trans %}Démarrer le circuit{% endtrans %} !
    </button>
  </div>
</form>
