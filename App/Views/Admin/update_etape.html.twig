<div class="modal" tabindex="-1" role="dialog" id="modalUpdateEtape">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <br>
      <div class="modal-header ">
        <h5 class="modal-title">{{ 'Step.Modification'|trans }} - {{ etape.id }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="formUpdateEtape" onsubmit="return modifierEtape()">
        <div class="modal-body">
          <div class="form-group">
            <input value="{{ etape.id }}" name="step_id" id="step_id" style="display: none">
            <input type="hidden" name="circuit_id" value="{{ etape.circuit_id }}">;
            <label for="positionEtape">{{ 'Step.Position'|trans }} : </label>
            <input type="number" class="form-control" id="positionEtape"
                   name="positionEtape" value="{{ etape.position }}" required>
          </div>
          <div class="form-group">
            <label for="descriptionEtape">{{ 'Step.Description'|trans }}</label>
            <textarea id="descriptionEtape" name="descriptionEtape"
                      rows="5">{{ etape.description|e }}</textarea>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">{{ 'Step.Modify.Label'|trans }}</button>
            <button type="button" class="btn btn-secondary"
                    data-dismiss="modal">{{ 'Close'|trans }}
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
