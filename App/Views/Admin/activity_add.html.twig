<div class="modal fade" id="activity-add-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content pt-3">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">{% trans %}Activity.Add{% endtrans %}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="activity-add-form" onsubmit="return false">
          <div class="form-group">
            <label for="name">{% trans %}Activity.Name{% endtrans %}</label>
            <input id="name" name="name" type="text" class="form-control" placeholder="{{"Promenade en montagne"|trans }}" required="required">
          </div>
          <div class="form-group">
            <label for="activity-type">{% trans %}Activity.Type{% endtrans %}</label>
            <select id="activity-type" name="type" class="form-control">
              {% for type in types %}
                <option value="{{loop.index}}">{{type|capitalize}}</option>
              {% endfor %}
            </select>
          </div>
          <label for="description">{% trans %}Description{% endtrans %}</label>
          <textarea id="description" class="form-control" rows="3" name="description"></textarea>
          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fa fa-at"></i>
              </span>
            </div>
            <input id="email" name="email" class="form-control" placeholder="{{"Placeholder.Email"|trans }}" type="email"/>
          </div>

          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fa fa-link"></i>
              </span>
            </div>
            <input id="link" name="link" class="form-control" placeholder="{{"Placeholder.Link"|trans }}" type="text"/>
          </div>

          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fa fa-phone"></i>
              </span>
            </div>
            <input id="phone" name="phone" class="form-control" placeholder="{{"Placeholder.Phone"|trans }}" type="text" required="required" pattern="^(?:\+\d{1})?[\s\.\-]?(?:\(?\d{3}\)?[\s\.\-]?\d{3}[\s\-\.]?\d{4})$"/>
          </div>

          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fa fa-globe"></i>
              </span>
            </div>
            <input id="country" name="country" class="form-control" placeholder="{{"Placeholder.Country"|trans }}" type="text" required="required"/>
          </div>

          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fa fa-map-pin"></i>
              </span>
            </div>
            <input id="region" name="region" class="form-control" placeholder="{{"Placeholder.Province"|trans }}" type="text" required="required"/>
          </div>

          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fa fa-city"></i>
              </span>
            </div>
            <input id="city" name="city" class="form-control" placeholder="{{"Placeholder.City"|trans }}" type="text" required="required"/>
          </div>

          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fa fa-building"></i>
              </span>
            </div>
            <input id="address-line-1" name="address_line_1" class="form-control" placeholder="{{"Placeholder.Address.Line1"|trans }}" type="text" required="required"/>
          </div>

          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fa fa-building"></i>
              </span>
            </div>
            <input id="address-line-2" name="address_line_2" class="form-control" placeholder="{{"Placeholder.Address.Line2"|trans }}" type="text"/>
          </div>

          <div class="form-group input-group">
            <div class="form-group input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fa fa-mail-bulk"></i>
                </span>
              </div>
              <input id="postal-code" name="postal_code" class="form-control" placeholder="{{"Placeholder.Postal"|trans }}" type="text" pattern="^([abceghj-nprstvxyABCEGHJ-NPRSTVXY]\d[abceghj-nprstv-zABCEGHJ-NPRSTV-Z])[ -]?(\d[abceghj-nprstv-zABCEGHJ-NPRSTV-Z]\d)$"/>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
            <input id="activity-add-form__submit" type="submit" class="btn btn-primary" value="{{"Save"|trans }}"></input>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
