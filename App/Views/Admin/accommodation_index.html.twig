<h2>Gestion des hébergements</h2>

{% include 'Admin/accommodation_add.html.twig' %}

<div class="accommodation-grid__controls">
  <a id="accommodation-new-btn" href="#" data-toggle="modal" data-target="#accommodation-add-modal">
    <span>Ajouter un hébergement</span>
    <i class="fas fa-plus-circle icone_ajout" aria-hidden="true"></i>
  </a>
</div>

<div class="accommodation-grid">
  <div class="accommodation-grid__header">
    <div class="accommodation-grid__header__elem">Nom</div>
    <div class="accommodation-grid__header__elem">Type</div>
    <div class="accommodation-grid__header__elem">Lien</div>
    <div class="accommodation-grid__header__elem">Cote</div>
    <div class="accommodation-grid__header__elem">Actions</div>
  </div>
  {% for accommodation in accommodations %}
  <div class="accommodation-grid__body">
    <div class="accommodation-grid__body__row">
      <div class="accommodation-grid__body__row__elem">{{ accommodation.name }}</div>
      <div class="accommodation-grid__body__row__elem">{{ accommodation.accommodation_type }}</div>
      <div class="accommodation-grid__body__row__elem">
        <a href="{{ accommodation.link }}">lien</a>
      </div>
      <div class="accommodation-grid__body__row__elem">{{ accommodation.rating }}/5</div>
      <div class="accommodation-grid__body__row__elem"></div>
    </div>
  </div>
  {% endfor %}
</div>
