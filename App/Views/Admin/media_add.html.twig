<div class="modal fade" id="media-add-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">{{ 'Media.File.Add'|trans }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="media-add-form" action="admin/media" method="post">
          <div class="form-group">
            <label for="name">{{ 'Media.File.Name'|trans }}</label>
            <input id="name" name="name" type="text" class="form-control" required>
          </div>

          <div class="form-group">
            <label for="description">{{ 'Description'|trans }}</label>
            <textarea id="description" name="description" rows="5" class="form-control"></textarea>
          </div>

          <div class="form-group">
            <label for="file">{{ 'File.Label'|trans }}</label>
            <input id="file" type="file" name="media" required/>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'Close'|trans }}</button>
            <input id="media-add-form__submit" type="submit" class="btn btn-primary" value="{{"Save"|trans }}"></input>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
