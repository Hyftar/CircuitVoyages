<h1>Gestion du plan de paiement</h1>
<div class="choix_circuit">
  <p class="mr-auto">Ajoutez ou enlever des paiements pour le départ - {{ circuit.name }}</p>
  <div class="bouton_creer" onClick="ajouterPayment({{ payment_plan.id }})"> {#TODO#}
    <p>Ajouter un paiement</p>
    <i class="fas fa-plus-circle icone_ajout"></i>
  </div>
</div>
<div class="input-group">
  <label for="nom_plan">Nom du plan de paiment : </label>
  <input type="text" id="nom_plan" name="nom_plan">
</div>
<div class="column my-2">
  <div class="col-10">
    <div class="list-group list-group-flush" id="list-tab" role="tablist">
      <a class="list-group-item disabled">
        <ul class="circuit_ul">
          <li>Montant dû</li>
          <li>Date</li>
          <li>Actions</li>
        </ul>
      </a>
      {% for payment in payments %}
        <a class="list-group-item list-group-item-action active" id="list-home-list" data-toggle="list" href="#list-home" role="tab" aria-controls="home">
          <ul class="circuit_ul">
            <li>{{ payment.amount_due }}</li>
            <li>{{ payment.date_due }}</li>
            <li>
              <button type="button" class="btn-primary" onclick="supprimerPayment({{ circuit_trip.id }})"><i class="fas fa-trash"></i></button> {#TODO#}
            </li>
          </ul>
        </a>
      {% else %}
        <a class="list-group-item list-group-item-action active" id="list-home-list" data-toggle="list" href="#list-home" role="tab" aria-controls="home">
          <ul class="circuit_ul">
            <li>N/A</li>
            <li>N/A</li>
            <li>
              <button type="button" class="btn-primary" disabled><i class="fas fa-edit"></i></button>
              <button type="button" class="btn-primary" disabled><i class="fas fa-trash"></i></button>
            </li>
          </ul>
        </a>
      {% endfor %}
    </div>
  </div>
</div>
<div id="modalContenuCircuit"></div>
<button type="button" class="btn btn-dark" onclick="getCircuitTrips({{ circuit.id }})">Retour à la gestion des départs</button>
