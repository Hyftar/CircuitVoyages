<h1>Gestion des plans de paiement</h1>
<div class="choix_circuit">
  <p class="mr-auto">Ajoutez ou enlevez des plans de paiement pour le départ - {{ circuit.name }}</p>
  <div class="bouton_creer" onClick="getPaymentPlansAdd()">
    <p>Ajouter un plan de paiement</p>
    <i class="fas fa-plus-circle icone_ajout"></i>
  </div>
</div>
<div class="column my-2">
  <div class="col-10">
    <div class="list-group list-group-flush" id="list-tab" role="tablist">
      <a class="list-group-item disabled">
        <ul class="circuit_ul">
          <li>Nom du plan de paiement</li>
          <li>Actions</li>
        </ul>
      </a>
      {% for payment_plan in payment_plans %}
        <a class="list-group-item list-group-item-action active" id="list-home-list" data-toggle="list" href="#list-home" role="tab" aria-controls="home">
          <ul class="circuit_ul">
            <li>{{ payment_plan.name }}</li>
            <li>
              <button type="button" class="btn-primary" onclick="getPayments({{ payment_plan.id }}, {{ circuit_trip.id }})"><i class="fas fa-edit"></i></button>
              <button type="button" class="btn-primary" onclick="supprimerPlan({{ payment_plan.id }}, {{ circuit_trip.id }})"><i class="fas fa-trash"></i></button>
            </li>
          </ul>
        </a>
      {% else %}
        <a class="list-group-item list-group-item-action active" id="list-home-list" data-toggle="list" href="#list-home" role="tab" aria-controls="home">
          <ul class="circuit_ul">
            <li>N/A</li>
            <li>N/A</li>
            <li>
              <button type="button" class="btn-primary" disabled><i class="fas fa-edit"></i></button>
              <button type="button" class="btn-primary" disabled><i class="fas fa-trash"></i></button>
            </li>
          </ul>
        </a>
      {% endfor %}
    </div>
  </div>
</div>
<div id="modalContenuCircuit"></div>
<button type="button" class="btn btn-dark" onclick="getCircuitTrips({{ circuit.id }})">Retour à la gestion des départs</button>

<!-- Modal Payment -->
<div class="modal fade" id="payment_plan_form_add" tabindex="-1" role="dialog"
     aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered"
       role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalPayment_plan">
          Ajouter un plan de paiement
        </h5>
        <button type="button" class="close" data-dismiss="modal"
                aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="payment_plan_name">Nom du plan : </label>
            <input type="text" name="payment_plan_name" id="payment_plan_name">
          </div>
        </form>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary"
                data-dismiss="modal">
          Fermer
        </button>
        <button type="button" class="btn btn-primary"
                onclick="ajouterPlan({{ circuit_trip.id }})">Ajouter
        </button>
      </div>
    </div>
  </div>
</div>
