<div id="reset-modal-container" class="container mdp-reset hidden">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="text-center">
            <i class="fa fa-lock fa-4x"></i>
            <h2 class="text-center">{{ 'Account.Password.Lost'|trans }}</h2>
            <p>{{ 'Account.Password.Reset.Here'|trans }}</p>
            <form class="form-signin" method="post" action="send_email">
              <div class="form-label-group">
                <input id="email-reset-form" name="email" type="email" class="form-control" placeholder="{{"Email"|trans }}">
                <label for="email-reset-form">{{ 'Email'|trans }}</label>
              </div>
              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">{{ 'Account.Password.Reset.Label'|trans }}</button>
            </form>
            <p id="reset-login-link" class="text-center">
              <a href="#">{{ 'Return'|trans }}</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
