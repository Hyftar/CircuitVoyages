<div id="register-user-form" class="card bg-light hidden">
  <div class="card-body mx-auto" style="max-width: 400px;">
    <h4 class="card-title mt-3 text-center">{{ 'Login'|trans }}</h4>
    <form id="register-form" onsubmit="return false">
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-user"></i>
          </span>
        </div>
        <input id="first-name" name="first_name" class="form-control" type="text" placeholder="{{"Placeholder.Name.First"|trans }}" required/>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-user"></i>
          </span>
        </div> 
        <input id="last-name" name="last_name" class="form-control" type="text" placeholder="{{"Placeholder.Name.Label"|trans }}" required/>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-at"></i>
          </span>
        </div> 
        <input id="email" name="email" class="form-control" type="email" placeholder="{{"Placeholder.Email"|trans }}" required/>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-calendar"></i>
          </span>
        </div>
        <input id="date-of-birth" name="dob" type="date" class="form-control" placeholder="{{"Placeholder.Birth"|trans }}" required/>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-phone"></i>
          </span>
        </div>
        <input id="phone" name="phone" class="form-control" type="text" placeholder="{{"Placeholder.Phone"|trans }}" required/>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-globe"></i>
          </span>
        </div>
        <input id="country" name="country" class="form-control" type="text" placeholder="{{"Placeholder.Country"|trans }}" required/>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-map-pin"></i>
          </span>
        </div>
        <input id="region" name="region" class="form-control" type="text" placeholder="{{"Placeholder.Province"|trans }}" required/>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-city"></i>
          </span>
        </div>
        <input id="city" name="city" class="form-control" type="text" placeholder="{{"Placeholder.City"|trans }}" required/>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-building"></i>
          </span>
        </div>
        <input id="address-line-1" name="address_line_1" class="form-control" placeholder="{{"Placeholder.Address.Line1"|trans }}" type="text" required/>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-building"></i>
          </span>
        </div> 
        <input id="address-line-2" name="address_line_2"class="form-control" placeholder="{{"Placeholder.Address.Line2"|trans }}" type="text"/>
      </div>

      <div class="form-group input-group">
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="fa fa-mail-bulk"></i>
            </span>
          </div>
          <input id="postal-code" name="postal_code" class="form-control" placeholder="{{"Placeholder.Postal"|trans }}" type="text"/>
        </div>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-lock"></i>
          </span>
        </div>
        <input id="password" name="password" class="form-control" type="password" placeholder="{{"Placeholder.Password.Create"|trans }}" required/>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-lock"></i>
          </span>
        </div>
        <input id="password-confirmation" class="form-control" type="password" placeholder="{{"Placeholder.Password.Confirm"|trans }}" required/>
      </div>
      <div class="form-group">
        <button id="register-submit" type="submit" class="btn btn-primary btn-block">
         {{ 'Account.Create.Label'|trans }}
        </button>
      </div>
      <p id="register-login-link" class="text-center">
        <a href="#">{{ 'Account.Exist'|trans }}</a>
      </p>
    </form>
  </div>
</div>
