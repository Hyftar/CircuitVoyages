<div id="register-user-form" class="card bg-light hidden">
  <div class="card-body mx-auto" style="max-width: 400px;">
    <h4 class="card-title mt-3 text-center">S'enregistrer</h4>
    <form id="register-form" onsubmit="return false">
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-user"></i>
          </span>
        </div>
        <input id="first-name" name="first_name" class="form-control" placeholder="Prénom" type="text" required/>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-user"></i>
          </span>
        </div>
        <input id="last-name" name="last_name" class="form-control" placeholder="Nom" type="text" required/>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-at"></i>
          </span>
        </div>
        <input id="email" name="email" class="form-control" placeholder="Adresse courriel" type="email" required/>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-calendar"></i>
          </span>
        </div>
        <input id="date-of-birth" name="dob" type="date" class="form-control" placeholder="Date de naissance" required/>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-phone"></i>
          </span>
        </div>
        <input id="phone" name="phone" class="form-control" placeholder="Téléphone" type="text" required/>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-globe"></i>
          </span>
        </div>
        <input id="country" name="country" class="form-control" placeholder="Pays" type="text" required/>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-map-pin"></i>
          </span>
        </div>
        <input id="region" name="region" class="form-control" placeholder="Province" type="text" required/>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-city"></i>
          </span>
        </div>
        <input id="city" name="city" class="form-control" placeholder="Ville" type="text" required/>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-building"></i>
          </span>
        </div>
        <input id="address-line-1" name="address_line_1" class="form-control" placeholder="Ligne d'adresse 1" type="text" required/>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-building"></i>
          </span>
        </div>
        <input id="address-line-2" name="address_line_2"class="form-control" placeholder="Ligne d'adresse 2" type="text"/>
      </div>

      <div class="form-group input-group">
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="fa fa-mail-bulk"></i>
            </span>
          </div>
          <input id="postal-code" name="postal_code" class="form-control" placeholder="Code postal" type="text"/>
        </div>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-lock"></i>
          </span>
        </div>
        <input id="password" name="password" class="form-control" placeholder="Créez un mot de passe" type="password" required/>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-lock"></i>
          </span>
        </div>
        <input id="password-confirmation" class="form-control" placeholder="Confirmation du mot de passe" type="password" required/>
      </div>
      <div class="form-group">
        <button id="register-submit" type="submit" class="btn btn-primary btn-block">
          Créer un compte
        </button>
      </div>
      <p id="register-login-link" class="text-center">
        <a href="#">Vous avez déjà un compte? Connectez-vous!</a>
      </p>
    </form>
  </div>
</div>
