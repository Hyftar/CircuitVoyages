<div id="register-user-form" class="card bg-light hidden">
  <div class="card-body mx-auto" style="max-width: 400px;">
    <h4 class="card-title mt-3 text-center">{% trans %}S'enregistrer{% endtrans %}</h4>
    <form id="register-form" onsubmit="return false">
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-user"></i>
          </span>
        </div>
        <input id="first-name" name="first_name" class="form-control" type="text" placeholder="{{"Prénom"|trans }}" required/>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-user"></i>
          </span>
        </div> 
        <input id="last-name" name="last_name" class="form-control" type="text" placeholder="{{"Nom"|trans }}" required/>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-at"></i>
          </span>
        </div> 
        <input id="email" name="email" class="form-control" type="email" placeholder="{{"Adresse courriel"|trans }}" required/>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-calendar"></i>
          </span>
        </div>
        <input id="date-of-birth" name="dob" type="date" class="form-control" placeholder="{{"Date de naissance"|trans }}" required/>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-phone"></i>
          </span>
        </div>
        <input id="phone" name="phone" class="form-control" type="text" placeholder="{{"Téléphone"|trans }}" required/>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-globe"></i>
          </span>
        </div>
        <input id="country" name="country" class="form-control" type="text" placeholder="{{"Pays"|trans }}" required/>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-map-pin"></i>
          </span>
        </div>
        <input id="region" name="region" class="form-control" type="text" placeholder="{{"Province"|trans }}" required/>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-city"></i>
          </span>
        </div>
        <input id="city" name="city" class="form-control" type="text" placeholder="{{"Ville"|trans }}" required/>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-building"></i>
          </span>
        </div>
        <input id="address-line-1" name="address_line_1" class="form-control" placeholder="{{"Ligne d'adresse 1"|trans }}" type="text" required/>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-building"></i>
          </span>
        </div> 
        <input id="address-line-2" name="address_line_2"class="form-control" placeholder="{{"Ligne d'adresse 2"|trans }}" type="text"/>
      </div>

      <div class="form-group input-group">
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="fa fa-mail-bulk"></i>
            </span>
          </div>
          <input id="postal-code" name="postal_code" class="form-control" placeholder="{{"Code postal"|trans }}" type="text"/>
        </div>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-lock"></i>
          </span>
        </div>
        <input id="password" name="password" class="form-control" type="password" placeholder="{{"Créez un mot de passe"|trans }}" required/>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-lock"></i>
          </span>
        </div>
        <input id="password-confirmation" class="form-control" type="password" placeholder="{{"Confirmation du mot de passe"|trans }}" required/>
      </div>
      <div class="form-group">
        <button id="register-submit" type="submit" class="btn btn-primary btn-block">
         {% trans %}Créer un compte{% endtrans %}
        </button>
      </div>
      <p id="register-login-link" class="text-center">
        <a href="#">{% trans %}Vous avez déjà un compte? Connectez-vous!{% endtrans %}</a>
      </p>
    </form>
  </div>
</div>
