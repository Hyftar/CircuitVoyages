<div>
  <button type="button" class=" my-2 float-sm-right btn btn-primary" onclick="ajouterPromotion()">{% trans %}Ajouter une promotion{% endtrans %}</button>
</div>
<div>
  <table class="table">
    <caption>{% trans %}Promotions{% endtrans %}</caption>
    <thead>
      <tr>
        <th scope="col">{% trans %}Type{% endtrans %}</th>
        <th scope="col">{% trans %}Description{% endtrans %}</th>
        <th scope="col">{% trans %}Date de d√©but{% endtrans %}</th>
        <th scope="col">{% trans %}Date de fin{% endtrans %}</th>
        <th scope="col">{% trans %}Actions{% endtrans %}</th>
      </tr>
    </thead>
    <tbody>
      {% for promotion in promotions %}
        <tr>
          <td>
            {{ promotion.name }}
          </td>
          <td>
            {{ promotion.description }}
          </td>
          <td>
            {{ promotion.start_date|date('Y-m-d') }}
          </td>
          <td>
            {{ promotion.end_date|date('Y-m-d') }}
          </td>
          <td>
            <button type="button" class="btn btn-info" onclick="listerDetailsPromotion({{ promotion.id }})">
              <i class="fas fa-search-plus"></i>
            </button>
            <button type="button" class="btn btn-secondary" onclick="modifierPromotion({{ promotion.id }})">
              <i class="fas fa-edit"></i>
            </button>
            <button type="button" class="btn btn-secondary" onclick="ajouterApplication({{ promotion.id }})">
              <i class="fas fa-stamp"></i>
            </button>
            <button type="button" class="btn btn-danger" onclick="supprimerPromotion({{ promotion.id }})">
              <i class="fas fa-trash"></i>
            </button>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
<div id="modalCreationPromo"></div>
