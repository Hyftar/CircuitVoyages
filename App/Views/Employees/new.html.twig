<div id="register-admin-form" class="card bg-light">
  <article class="card-body mx-auto" style="max-width: 400px;">
    <h4 class="card-title mt-3 text-center">{% trans %}Créez un compte administrateur{% endtrans %}</h4>
    <form>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-user"></i>
          </span>
        </div>
        <input name="" id="user" class="form-control" placeholder="{{"Utilisateur"|trans }}" type="text">
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-envelope"></i>
          </span>
        </div>
        <input name="" id="email-user-adress" class="form-control" placeholder="{{"Adresse courriel"|trans }}" type="email">
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-lock"></i>
          </span>
        </div>
        <input id="admin-register-password" class="form-control" placeholder="{{"Créez un mot de passe"|trans }}" type="password">
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-lock"></i>
          </span>
        </div>
        <input id="admin-repeat-password" class="form-control" placeholder="{{"Confirmation du mot de passe"|trans }}" type="password">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">{% trans %}Créez un compte administrateur{% endtrans %}
        </button>
      </div>
    </form>
  </article>
</div>
