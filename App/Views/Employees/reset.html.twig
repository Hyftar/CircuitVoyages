<!--Password reset page-->
<div class="container mdp-reset">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="text-center">
            <h3>
              <i class="fa fa-lock fa-4x"></i>
            </h3>
            <h2 class="text-center">{{ 'Account.Password.Lost'|trans }}</h2>
            <p>{{ 'Account.Password.Reset.Here'|trans }}</p>
            <form class="form-signin">
              <div class="form-label-group">
                <input type="email" id="email-reset-form" class="form-control" placeholder="{{"Placeholder.Email"|trans }}">
                <label for="email-reset-form">{{ 'Email'|trans }}</label>
              </div>
              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">{{ 'Account.Password.Reset.Label'|trans }}</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
