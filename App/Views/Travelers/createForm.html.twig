<div class="modal" tabindex="-1" role="dialog" id="modalTraveler">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Ajouter un voyageur</h5>
        <button type="button" class="close" onclick="returnTravelersList()" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="formTraveler" class="mt-2 mb-1" onsubmit="return addTraveler();">
          <h5>Informations du voyageur</h5>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputFirstName">Prénom</label>
              <input type="text" required class="form-control" id="inputFirstName" name="inputFirstName">
              <div class="invalid-feedback" id="feedbackFirstName">
              </div>
            </div>
            <div class="form-group col-md-6">
              <label for="inputLastName">Nom</label>
              <input type="text" required class="form-control" id="inputLastName" name="inputLastName">
              <div class="invalid-feedback" id="feedbackLastName">
              </div>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputBirthDate">Date de naissance</label>
              <input type="date" required class="form-control" id="inputBirthDate" name="inputBirthDate">
              <div class="invalid-feedback" id="feedbackBirthDate">
              </div>
            </div>
            <div class="form-group col-md-6">
              <label for="inputPhoneNumber">Numéro de téléphone</label>
              <input type="text" required class="form-control" id="inputPhoneNumber" name="inputPhoneNumber">
              <div class="invalid-feedback" id="feedbackPhoneNumber">
              </div>
            </div>
          </div>
          <select class="form-control" id="inputGenre" name="inputGenre" required>
            <option value="MALE">Homme</option>
            <option value="FEMALE">Femme</option>
            <option value="OTHER">Autre</option>
          </select>
          <div class="invalid-feedback" id="feedbackGenre">
          </div>
          <div class="form-check mt-1">
            <input type="checkbox" class="form-check-input" id="inputAssistance" name="addressCheckbox">
            <label class="form-check-label" for="inputAssistance">Assistance nécessaire à l'aéroport</label>
          </div>
          <div class="form-group mt-1">
            <label for="inputRegion">Redress number (si nécessaire)</label>
            <input type="text" class="form-control" id="inputRedress" name="inputRedress" maxlength="20">
            <div class="invalid-feedback" id="feedbackRedress">
            </div>
          </div>
          <h5>Adresse du voyageur</h5>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="addressCheckbox" name="addressCheckbox" onchange="sameAddress()" value="{{ member.address_id }}">
            <label class="form-check-label" for="addressCheckbox">Utiliser la même adresse que le client</label>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputCountry">Pays</label>
              <input type="text" required class="form-control" id="inputCountry" name="inputCountry">
              <div class="invalid-feedback" id="feedbackCountry">
              </div>
            </div>
            <div class="form-group col-md-6">
              <label for="inputCity">Ville</label>
              <input type="text" required class="form-control" id="inputCity" name="inputCity">
              <div class="invalid-feedback" id="feedbackCity">
              </div>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputRegion">Region</label>
              <input type="text" required class="form-control" id="inputRegion" name="inputRegion">
              <div class="invalid-feedback" id="feedbackRegion">
              </div>
            </div>
            <div class="form-group col-md-6">
              <label for="inputPostalCode">Code Postal</label>
              <input type="text" class="form-control" id="inputPostalCode" name="inputPostalCode">
              <div class="invalid-feedback" id="feedbackPostalCode">
              </div>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="inputAddressLine1">Addresse</label>
              <input type="text" required class="form-control" id="inputAddressLine1" name="inputAddressLine1">
              <div class="invalid-feedback" id="feedbackAddressLine1">
              </div>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-12">
              <input type="text" class="form-control" id="inputAddressLine2" name="inputAddressLine2">
              <div class="invalid-feedback" id="feedbackAddressLine2">
              </div>
            </div>
          </div>
          <input type="submit" class="btn btn-primary" value="Sauvegarder">
          <button type="button" class="btn btn-primary" onclick="returnTravelersList()">Annuler</button>
        </form>
      </div>
    </div>
  </div>
</div>
